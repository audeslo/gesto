{% extends 'compte/compte.html.twig' %}


{% block content %}
    <div class="card mb-3" >
        <div class="card-header">
            <h2>
                <i class="fa fa-table" ></i>
                Liste des comptes</h2></div>
        <div class="card-body" >
            <div class="row">
                <div class="col-md-2" id="add-modal">
                    {% include('compte/new.html.twig') %}
                </div>
            </div>
            <hr>
            <table class="table table-bordered " id="datatable" width="100%" cellspacing="0">

                <thead>
                <tr>
                    <th>N° Compte</th>
                    <th>Intitulé</th>
                    <th>Client</th>
                    <th>Type</th>
                    <th>Solde</th>
                    <th>Statut</th>
                    <th>Vue</th>
                </tr>
                </thead>
                <tbody id="compte_table">
                {{ include('compte/compte_table.html.twig') }}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer small text-muted">Hier à 11:59 </div>

{% endblock %}
