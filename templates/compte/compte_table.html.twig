                {{ compte.intitule }}
            </a>
        </td>
        <td>{{ compte.client }}</td>
        <td>{{ compte.type }}</td>
        <td>{{ compte.solde | number_format(0,0,' ')~' '~compte.devis}}</td>
        <td>{{ compte.actif ? 'ouvert' : 'ferm√©' }}</td>
        <td>
            {% include('compte/viewmodal.html.twig') %}
        </td>
    </tr>
{% endfor %}