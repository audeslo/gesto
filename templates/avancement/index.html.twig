{% extends 'avancement/avancement.html.twig' %}


{% block content %}
    <div class="card mb-3" >
        <div class="card-header">
            <h2>
                <i class="fa fa-table" ></i>
                Liste des avancements</h2></div>
        <div class="card-body" >
            <div class="row">
                <div class="col-md-2" id="add-modal">
                    {% include('avancement/new.html.twig') %}
                </div>

                <div class="col-md-offset-8 col-md-2 ">
                    {% include('avancement/resilier.html.twig') %}

                    {#<a href="#" class="btn btn-danger ">
                        <i class="fa fa-trash-o"></i>
                        Résilier
                    </a>#}
                </div>
            </div>
            <hr>
            <table class="table table-bordered " id="datatable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Réf. Livret</th>
                    <th>Libellé</th>
                    <th>Date/heure</th>
                    <th>Montant</th>
                    <th>Sens</th>
                    <th>Client</th>
                    <th>Agent</th>
                    <th>Vue</th>
                </tr>
                </thead>
                <tbody id="avancement_table">
                {{ include('avancement/avancement_table.html.twig') }}
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer small text-muted">Hier à 11:59 </div>

{% endblock %}
