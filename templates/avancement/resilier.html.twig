<a href="#" class="btn btn-danger" data-toggle="modal" data-target="#Resilier">
    <i class="fa fa-trash-o"></i>
    Résilier
</a>

<!-- Modal -->
<div class="modal fade" id="Resilier" tabindex="-1" role="dialog" aria-labelledby="Resilier" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModal">Nouvelle résiliation tontine</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="background-color: #cccccc">
                {{ form_start(form_resiliation, {'attr': {'id':'form_resiliation'}})  }}
                <div class="row" style="margin-left: auto">

                    <div class="row col-md-12" >
                        <div class="col-md-5 ">
                            {{ form_label(form_resiliation.tontine) }}
                            {{ form_widget(form_resiliation.tontine) }}
                            {{ form_errors(form_resiliation.tontine) }}

                        </div>
                        <div class="col-md-5 offset-2">
                            {{ form_label(form_resiliation.nomcomplet) }}
                            {{ form_widget(form_resiliation.nomcomplet) }}
                            {{ form_errors(form_resiliation.nomcomplet) }}

                        </div>
                    </div>
                    <div class="row col-md-12" >
                        <div class="col-md-5 col-md-offset-2">
                            {{ form_label(form_resiliation.solde) }}
                            {{ form_widget(form_resiliation.solde) }}
                            {{ form_errors(form_resiliation.solde) }}

                        </div>
                        <div class="col-md-5 offset-2" id="cachetSolde">
                            {{ form_label(form_resiliation.temoinsolde) }}
                            {{ form_widget(form_resiliation.temoinsolde) }}
                            {{ form_errors(form_resiliation.temoinsolde) }}

                        </div>
                    </div>
                </div>
                {{ form_end(form_resiliation) }}
            </div>
            <div class="modal-footer">
                <div class="row col-md-12">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            <i class="fa fa-chevron-left"></i>
                            Retour à la Liste
                        </button>
                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <button id="ajout_resiliation" class="btn btn-danger" onclick="resilier(false)">
                            <i class="fa fa-trash-o"></i>
                         {{ button_label|default('Résilier') }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>