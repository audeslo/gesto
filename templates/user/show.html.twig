{% extends 'user/user.html.twig' %}


{% block content %}
    <div class="col-lg-8">

        <h1>Détail Utilisateur</h1>

        <table class="table-bordered table">
            <tbody>
            <tr>
                <th>N°</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sexe }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sexe }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Activation</th>
                <td>{% if user.enabled ==1 %} Activé {% else %} Désactivé {% endif %}</td>
            </tr>
            <tr>
                <th>Droits</th>
                <td>
                    {% for role in user.roles %}
                        {{role }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Dernière Connexion</th>
                <td>{% if user.lastLogin %}{{ user.lastLogin|date('d/m/Y H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enregistré par </th>
                <td>
                    {{ user.createdBy }}<br> le
                    {{ user.createdOn ? user.createdOn |date('d/m/Y H:i:s') : ''  }}
                </td>
            </tr>
            <tr>
                <th>Modifié par </th>
                <td>
                    {{ user.editedBy }} <br>le
                    {{ user.editedOn ? user.editedOn |date('d/m/Y H:i:s') : '' }}
                </td>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <a class="btn btn-default col-md-3" href="{{ path('user_index') }}">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour à la liste
            </a>
            <a class="btn btn-primary col-md-2 col-md-offset-7" href="{{ path('user_edit', { 'slug': user.slug }) }}">
                <i class="glyphicon glyphicon-pencil"></i>
                Modifier
            </a>
        </div>
    </div>
{% endblock %}