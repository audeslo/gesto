        <div class="row">
            <div class="col-md-5">

                    {% for key, messages in app.session.flashbag.all() %}
                        <div class="alert alert-{{ key }}">
                            <ul>
                                {% for message in messages %}
                                    <li>
                                        {{ message }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>

                    {% endfor %}

            </div>

            <div class="col-md-5">

                <div class="container">

