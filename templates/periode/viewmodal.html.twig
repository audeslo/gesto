<a style="cursor: pointer"  data-toggle="modal" data-target="#{{ periode.id }}">
    <i style="font-size: 20px" class="fa fa-eye "></i>
</a>

<!-- Modal -->
<div class="modal fade " id="{{ periode.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="color: #000000">
    <div class="modal-dialog modal-lg" role="document"  >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Détails periode</h4>
            </div>
            <div class="modal-body">
                <table class="table-bordered table" style="background-color: #868e96">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ periode.id }}</td>
                    </tr>
                    <tr>
                        <th>Début</th>
                        <td>{{ periode.debut | date ('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Fin</th>
                        <td>{{ periode.fin | date ('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ periode.code }}</td>
                    </tr>
                    <tr>
                        <th>Exercice</th>
                        <td>{{ periode.annee }}</td>
                    </tr>
                    <tr>
                        <th>Etat</th>
                        <td>{{ periode.etat}}</td>
                    </tr>

                    <tr>
                        <th>Enregistré le</th>
                        <td>
                            {{ periode.createdOn ? periode.createdOn |date('d/m/Y H:i:s') : ''  }} <br>
                            Par {{ periode.createdBy }}
                        </td>
                    </tr>

                    <tr>
                        <th>Modifié le</th>
                        <td>
                            {{ periode.editedOn ? periode.editedOn |date('d/m/Y H:i:s') : ''  }} <br>
                            Par {{ periode.editedBy }}
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="row" >
                    <button type="button" class="btn btn-info" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i>
                        Retour à la liste
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                {#<button type="button" class="btn btn-primary">Imprimer</button>#}
            </div>
        </div>
    </div>
</div>