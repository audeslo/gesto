<a style="cursor: pointer"  data-toggle="modal" data-target="#{{ appointement.id }}">
    <i style="font-size: 20px" class="fa fa-eye "></i>
</a>

<!-- Modal -->
<div class="modal fade " id="{{ appointement.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="color: #000000">
    <div class="modal-dialog modal-lg" role="document"  >
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Détails appointement</h4>
            </div>
            <div class="modal-body">
                <table class="table-bordered table" style="background-color: #868e96">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ appointement.id }}</td>
                    </tr>
                    <tr>
                        <th>Référence</th>
                        <td>{{ appointement.reflivret }}</td>
                    </tr>
                    <tr>
                        <th>Montant Economie</th>
                        <td>{{ appointement.meconomie }}</td>
                    </tr>
                    <tr>
                        <th>Nombre feuillets</th>
                        <td>{{ appointement.nbfeuillet }}</td>
                    </tr>
                    <tr>
                        <th>Note</th>
                        <td>{{ appointement.note }}</td>
                    </tr>
                    <tr>
                        <th>Etat</th>
                        <td>{{ appointement.actif ? 'Actif' : 'Non actif' }}</td>
                    </tr>

                    <tr>
                        <th>Enregistré le</th>
                        <td>
                            {{ appointement.createdOn ? appointement.createdOn |date('d/m/Y H:i:s') : ''  }} <br>
                            Par {{ appointement.createdBy }}
                        </td>
                    </tr>

                    <tr>
                        <th>Modifié le</th>
                        <td>
                            {{ appointement.editedOn ? appointement.editedOn |date('d/m/Y H:i:s') : ''  }} <br>
                            Par {{ appointement.editedBy }}
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="row" >
                    <button type="button" class="btn btn-info" data-dismiss="modal">
                        <i class="fa fa-chevron-left"></i>
                        Retour à la liste
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                {#<button type="button" class="btn btn-primary">Imprimer</button>#}
            </div>
        </div>
    </div>
</div>